{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": false,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true, // Required for debugging NPM published package.
    "rootDir": "src/",
    "experimentalDecorators": true
  }
}